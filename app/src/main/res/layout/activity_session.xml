<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Session">

    <Button
        android:id="@+id/startSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StartSession"
        android:layout_above="@id/powerGraph"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/horizontalLine"
        android:textAllCaps="false"
        android:onClick="startTimerCounter"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="100dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/pauseSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PauseSession"
        android:layout_above="@id/powerGraph"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/horizontalLine"
        android:textColor="@color/black"
        android:onClick="pauseTimerCounter"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="100dp" />


    <ImageView
        android:id="@+id/powerGraph"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/PowergraphImageDescription"
        android:src="@drawable/powergraph" />

    <Chronometer
        android:id="@+id/timerCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sessionData"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/horizontalLine" />

    <TextView
        android:id="@+id/sessionData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/horizontalLine"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/SessionData"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:layout_toEndOf="@id/powerGraph" />
    
</RelativeLayout>