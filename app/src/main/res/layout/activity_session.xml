<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutSession"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Session">

    <Button
        android:id="@+id/startSession"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pauseSession"
        android:layout_marginStart="84dp"
        android:onClick="startTimerCounter"
        android:text="@string/StartSession"
        android:textAllCaps="false"
        android:background="@drawable/session_standard_button"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/pauseSession"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="14dp"
        android:onClick="pauseTimerCounter"
        android:text="@string/PauseSession"
        android:textAllCaps="false"
        android:background="@drawable/session_standard_button"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/returnSession"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/saveSession"
        android:layout_marginStart="84dp"
        android:onClick="returnToSession"
        android:text="@string/returnSession"
        android:textAllCaps="false"
        android:background="@drawable/session_standard_button"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/saveSession"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="14dp"
        android:onClick="saveSession"
        android:text="@string/saveSession"
        android:textAllCaps="false"
        android:background="@drawable/session_standard_button"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/sessionGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:layout_below="@id/pauseSession"
        android:layout_toStartOf="@id/horizontalLine"/>

        <!--

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/sessionViewPagerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            -->

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="141dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/rightSideLadder"
        android:layout_width="143dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollbars="horizontal"
        android:showDividers="none">

        <TextView
            android:id="@+id/elapsedTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/elapsedTime"
            />

        <Chronometer
            android:id="@+id/timerCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/time" />

        <TextView
            android:id="@+id/debugOutput2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:lines="2"
            android:text="@string/targetTime" />

        <!--

        <TextView
            android:id="@+id/distDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/distance" />

        <TextView
            android:id="@+id/debugOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/targetDistance" />

        -->

        <TextView
            android:id="@+id/spmDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/spm" />

        <TextView
            android:id="@+id/spmNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/spmNumbers" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/burgerSession"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/standardColor"
        android:src="@drawable/ic_dehaze"
        android:scaleType="fitCenter"
        android:onClick="openDrawerSession"/>

</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navViewSession"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view_session"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header_session"/>

</android.support.v4.widget.DrawerLayout>