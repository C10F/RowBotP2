<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueMainActivity"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/guideButton"
        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="397dp"
        android:layout_marginTop="8dp"
        android:onClick="goToGuide"
        android:background="@drawable/start_button"
        android:textColor="@color/orangeMainActivity"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="@string/GuideButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statButton" />

    <Button
        android:id="@+id/statButton"
        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="397dp"
        android:layout_marginTop="9dp"
        android:onClick="goToStats"
        android:background="@drawable/start_button"
        android:textColor="@color/orangeMainActivity"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="@string/StatButton"
        app:layout_constraintBottom_toTopOf="@+id/guideButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startbutton" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="397dp"
        android:layout_marginTop="93dp"
        android:onClick="goToSession"
        android:background="@drawable/start_button"
        android:textColor="@color/orangeMainActivity"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="@string/StartButton"
        app:layout_constraintBottom_toTopOf="@+id/statButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sketchyFrontpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/SketchyImageDescription"
        android:src="@drawable/fun_design_sketchy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/statButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>