<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="100dp"
    android:paddingEnd="100dp">

    <TextView
        android:id="@+id/preset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SessionInputPreset"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/presetSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">
    </Spinner>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/distanceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="4"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/SessionInputDistance"
            android:maxLength="4"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="5"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/SessionInputTime"
            android:maxLength="5"
            android:inputType="time"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/continueTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SessionInputContinue"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:onClick="goToSessionFinal"
        android:layout_gravity="center_horizontal" />


</LinearLayout>