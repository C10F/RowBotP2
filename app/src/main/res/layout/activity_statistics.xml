<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics">

    <Button
        android:id="@+id/weekButton"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/monthButton"
        android:layout_marginStart="79dp"
        android:onClick="weekSelected"
        android:text="@string/week"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/monthButton"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="monthSelected"
        android:text="@string/month"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/weekTimeSpent"
        android:layout_width="440dp"
        android:layout_height="255dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="11dp"
        android:visibility="gone"
        app:srcCompat="@drawable/weektimespent_ph" />

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="141dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/rightSideLadder"
        android:layout_width="143dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="fill_horizontal|center"
        android:orientation="vertical"
        android:showDividers="none">

        <Button
            android:id="@+id/TimeButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="timeSelected"
            android:text="@string/timeButton" />

        <Button
            android:id="@+id/spmButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="spmSelected"
            android:text="@string/spmButton" />

        <Button
            android:id="@+id/distButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="distanceSelected"
            android:text="@string/distButton" />
    </LinearLayout>

    <ImageView
        android:id="@+id/monthTimeSpent"
        android:layout_width="437dp"
        android:layout_height="268dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        app:srcCompat="@drawable/monthtimespent_ph" />

    <ImageView
        android:id="@+id/weekDistCov"
        android:layout_width="440dp"
        android:layout_height="267dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:visibility="gone"
        app:srcCompat="@drawable/weekdistcov_ph" />

    <ImageView
        android:id="@+id/monthDistCov"
        android:layout_width="460dp"
        android:layout_height="271dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        app:srcCompat="@drawable/monthdistcov_ph" />

    <ImageView
        android:id="@+id/weekSPM"
        android:layout_width="445dp"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        app:srcCompat="@drawable/weekspm_ph" />

    <ImageView
        android:id="@+id/monthSPM"
        android:layout_width="458dp"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        app:srcCompat="@drawable/monthspm_ph" />


</RelativeLayout>